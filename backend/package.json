{
  "name": "uml-backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "start:pm2": "pm2 start ecosystem.config.json",
    "start:pm2:prod": "pm2 start ecosystem.config.json --env production",
    "stop:pm2": "pm2 stop ecosystem.config.json",
    "restart:pm2": "pm2 restart ecosystem.config.json",
    "logs:pm2": "pm2 logs",
    "monitor:pm2": "pm2 monit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "chmod +x render-build.sh && ./render-build.sh",
    "render:start": "chmod +x render-start.sh && ./render-start.sh",
    "health-check": "node scripts/health-check.js",
    "verify-deployment": "node scripts/verify-deployment.js",
  "prestart": "if not exist logs mkdir logs && if not exist cache mkdir cache && if not exist uploads mkdir uploads",
    "postdeploy": "npm run verify-deployment"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.4",
    "multer": "latest",
    "pm2": "^6.0.10",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^29.0.0",
    "jest": "^29.0.0",
    "supertest": "^6.3.0"
  }
}
